<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvSuggested"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:clickable="true"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/suggestedImage"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:transitionName="tImage"
            android:layout_height="120dp"
            android:src="@drawable/fi_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/suggestedTitle"
                android:layout_width="wrap_content"
                android:transitionName="tName"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="Biryani"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suggestedDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="tRestaurant"
                android:text="Most Sold!"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/suggestedPrice"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:transitionName="tPrice"
                android:layout_height="wrap_content"
                android:text="Most Sold!"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>